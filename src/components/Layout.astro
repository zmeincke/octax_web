<style is:global>
:root {
    --primarybgcolor: #232121;
    --secondarybgcolor: #000000;
    --primarytextcolor: #FDFDFD;
    --accentcolor: #F26F3B;
    --lightaccentcolor: #ECA97E;
    --darkassentcolor: #C8523A;

    --textfont: 'montserrat', sans-serif;
    --titlefont: 'gin', 'montserrat', sans-serif;
}


* {
    margin: 0;
    padding: 0;

    img {
        width: 100%;
        height: 100%;
    }
}

body {
    background-color: var(--primarybgcolor);
    color: var(--primarytextcolor);
}

a, p, h1, h2, h3, h4, h5, h6, li {
    color: var(--primarytextcolor);
    font-family: var(--textfont);
    font-size: 1.5rem;
}
h1 {
    font-family: var(--titlefont);
}
</style>